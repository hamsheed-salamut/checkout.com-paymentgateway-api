@model  Merchant.WebUI.Models.Products
<div class="container">
    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Demo Shopping List </h5>
                            </div>              
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @{
                        foreach (var item in Model.ProductList)
                        {
                                        <div class="row">

                                            <div class="col-xs-4">
                                                <h4 class="product-name"><strong>@item.Name</strong></h4><h4><small>@item.Name</small></h4>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="col-xs-6 text-right">
                                                    <h6><strong>Rs @item.Price </strong></h6>
                                                </div>
                                            </div>
                                            <div class="col-xs-8">
                                                <div class="col-xs-8 text-right">
                                                    <a class="btn btn-success btn-block" asp-controller="Gateway" asp-action="Index" asp-route-amount="@item.Price">
                                                        Checkout
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                            <hr>
                        }
                    }

                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-3">
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>